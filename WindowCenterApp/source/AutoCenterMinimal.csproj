<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWindowsForms>true</UseWindowsForms>
    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <AssemblyName>AutoCenterMinimal</AssemblyName>
    <Product>Auto-Center Minimal Service</Product>
    <AssemblyTitle>Auto-Center Minimal Service for Windows Start &amp; Search</AssemblyTitle>
    <AssemblyDescription>Minimalist service to automatically center Windows Start Menu and Search windows</AssemblyDescription>
    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.0</FileVersion>
    <Copyright>Copyright Â© 2025</Copyright>
    <StartupObject>WindowManager.MinimalProgram</StartupObject>
  </PropertyGroup>

  <!-- Release configuration optimizations -->
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <Optimize>true</Optimize>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
    <PublishTrimmed>false</PublishTrimmed>
  </PropertyGroup>

</Project>
